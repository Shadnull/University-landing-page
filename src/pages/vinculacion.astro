---
// Importaciones de Layout y Datos
import MainLayout from "../layouts/MainLayout.astro";
import { empresas } from "../DB/empresas.js";
import "../styles/global.css";
// Importaciones de Componentes Vue
import HeaderFlotante from "../components/vue/FloatHeader.vue";
import Footer from "../components/vue/Footer.vue";
import VinculacionHero from "../components/vue/VinculacionHero.vue";
import InfSliderVinculacion from "../components/vue/InfSliderVinculacion.vue";
import SliderVinculacion from "../components/vue/SliderVinculacion.vue";
import VinculacionSections from "../components/vue/VinculacionSections.vue";
---

<MainLayout title="UTNay - VinculaciÃ³n Empresarial">
    <section id="vinculacion-hero" class="relative h-[80vh] md:h-[100vh]">
        <div class="absolute inset-0 bg-black/50 z-10"></div>
        <VinculacionHero client:load />
    </section>

    <section class="bg-gray-50 py-16 md:py-24 px-4 sm:px-6 lg:px-8 text-center">
        <div class="max-w-7xl mx-auto">
            <h2 class="text-4xl sm:text-5xl font-extrabold text-gray-900 mb-4">
                Empresas Aliadas
            </h2>
            <p class="text-lg text-gray-600 mb-12 max-w-3xl mx-auto">
                Conoce a nuestras empresas colaboradoras que impulsan el
                desarrollo profesional de nuestros estudiantes.
            </p>

            <div class="mb-16">
                <InfSliderVinculacion logos={empresas} client:load />
            </div>

            <div>
                <SliderVinculacion client:load />
            </div>
        </div>
    </section>

    <hr class="border-gray-200" />

    <VinculacionSections client:load />

    <HeaderFlotante client:load />
    <Footer client:only="vue" />
</MainLayout>
