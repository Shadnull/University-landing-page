---
import MainLayout from "../layouts/MainLayout.astro";
import Footer from "../components/vue/footer.vue";
import { careers } from "../DB/db.js";
import "../styles/global.css";

const career = careers.find((c) => c.id === "turismo");
if (!career) {
  throw new Error("Career 'turismo' not found in db.js");
}
---

<MainLayout title={`${career.name} - Universidad Tecnológica de Nayarit`}>
  <section class="relative h-[80vh] md:h-[90vh] flex items-center justify-center bg-gradient-to-br from-emerald-900 via-emerald-700 to-sky-800 text-white overflow-hidden">
    <div class="absolute inset-0 opacity-40 bg-[radial-gradient(circle_at_top,_#22c55e_0,_transparent_55%),_radial-gradient(circle_at_bottom,_#0ea5e9_0,_transparent_55%)]"></div>
    <div class="relative z-10 max-w-4xl px-6 text-center">
      <p class="uppercase tracking-[0.2em] text-emerald-200 text-xs md:text-sm mb-3">Oferta educativa</p>
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold mb-4 leading-tight">
        {career.name}
      </h1>
      <p class="text-sm md:text-base text-emerald-50/90 max-w-2xl mx-auto">
        {career.description}
      </p>
    </div>
  </section>

  <section class="py-16 px-4 sm:px-6 lg:px-8 bg-white text-gray-900">
    <div class="max-w-5xl mx-auto space-y-6 text-sm md:text-base text-gray-700">
      <h2 class="text-2xl md:text-3xl font-bold mb-2">Perfil de la carrera</h2>
      <p>
        Duración: <span class="font-semibold">{career.duration}</span> · Modalidad: <span class="font-semibold">{career.modality}</span>
      </p>
      <p>
        Campo laboral: {career.field}
      </p>
      <p>
        Describe aquí destinos, actividades turísticas, gestión hotelera y proyectos de turismo sustentable vinculados a la carrera.
      </p>
    </div>
  </section>

  <Footer client:only="vue" />
</MainLayout>