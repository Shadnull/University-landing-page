---
// src/pages/index.astro
import MainLayout from "../layouts/MainLayout.astro";
import Hero from "../components/react/Hero.jsx";
// 1. Cambiamos el nombre del componente importado para que sea más claro
import CareerBanner from "../components/vue/CareerBanner.vue";

// 2. Actualizamos el array para incluir la URL de la imagen para cada carrera
const careers = [
    { name: "Gastronomía", img: "/images/careers/gastronomia.jpg" },
    { name: "Logística Internacional", img: "/images/careers/logistica.jpg" },
    { name: "Mantenimiento Industrial", img: "/images/careers/industrial.jpg" },
    { name: "Mecatrónica", img: "/images/careers/mecatronica.jpg" },
    { name: "Seguridad Pública", img: "/images/careers/seguridad.jpg" },
    {
        name: "Gestión y Desarrollo Turístico",
        img: "/images/careers/turismo.jpg",
    },
    { name: "Tecnologías de la Información", img: "/images/careers/ti.jpg" },
    { name: "Administración", img: "/images/careers/administracion.jpg" },
    { name: "Negocios y Mercadotecnia", img: "/images/careers/negocios.jpg" },
    { name: "Ingeniería en Alimentos", img: "/images/careers/alimentos.jpg" },
    { name: "Ingeniería Civil", img: "/images/careers/civil.jpg" },
];
---

<MainLayout title="UTNay - Universidad Tecnológica de Nayarit">
    <section
        id="inicio"
        class="h-screen bg-cover bg-center bg-no-repeat flex items-center justify-center"
        style="background-image: url('/images/utnay-hero.jpg')"
    >
        <div class="absolute inset-0 bg-black/50"></div>
        <div class="relative z-10">
            <Hero client:load />
        </div>
    </section>

    <section id="carreras">
        <div class="text-center bg-gray-100 py-20 px-4">
            <h2 class="text-4xl font-bold text-gray-800 mb-2">
                Oferta Educativa
            </h2>
            <p class="text-gray-600">
                Explora las carreras que te llevarán al siguiente nivel.
            </p>
        </div>

        <div class="flex flex-col">
            {
                careers.map((career) => (
                    // 4. Pasamos las propiedades correctas al nuevo componente CareerBanner
                    <CareerBanner
                        title={career.name}
                        imageUrl={career.img}
                        client:visible
                    />
                ))
            }
        </div>
    </section>
</MainLayout>
