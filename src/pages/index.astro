---
// src/pages/index.astro
import MainLayout from "../layouts/MainLayout.astro";
import Hero from "../components/react/Hero.jsx";
import CareerBanner from "../components/vue/CareerBanner.vue";
import NoticiasSlider from '../components/vue/noticiasslider.vue';
import HeaderFlotante from '../components/vue/FloatHeader.vue';
// 1. Importa el tipo `ImageMetadata` para que TypeScript sepa qué es.
import type { ImageMetadata } from 'astro';

// Las importaciones de imagenes en Astro devuelven un objeto con metadatos.
import gastronomiaImg from '../assets/images/asd.png'; 
import '../styles/global.css';

// 2. Define una "interfaz" para decirle a TypeScript cómo son tus objetos.
// Esto elimina la ambigüedad y soluciona el error.
interface Career {
  name: string;
  img: ImageMetadata;
  description: string;
}

// 3. Aplica el tipo `Career[]` (un array de Career) a tu constante.
const careers: Career[] = [
    { name: "Gastronomía", img: gastronomiaImg, description: "Formando a los chefs del mañana." },
    { name: "Tecnologías de la Información", img: gastronomiaImg, description: "Impulsando la innovación digital." },
    { name: "Administración", img: gastronomiaImg, description: "Liderando el futuro empresarial." },
    { name: "Mecatrónica", img: gastronomiaImg, description: "Integrando tecnología y automatización." },
    { name: "Logística", img: gastronomiaImg, description: "Moviendo el mundo eficientemente." },
    { name: "Turismo", img: gastronomiaImg, description: "Explorando destinos y culturas." },
    { name: "Desarrollo de Negocios", img: gastronomiaImg, description: "Creando oportunidades globales." },
    { name: "Mantenimiento Industrial", img: gastronomiaImg, description: "Asegurando la operatividad continua." },
    { name: "Seguridad Pública", img: gastronomiaImg, description: "Optimizando procesos de producción." },


];
---

<MainLayout title="UTNay - Universidad Tecnológica de Nayarit">
    <HeaderFlotante client:load />
<section id="inicio" class="h-screen relative">

        <div class="absolute inset-0 bg-black/50"></div>
            <Hero client:load />
    </section>
    <div class="text-center bg-white py-20 px-4 ">
        <h2 class="text-4xl font-bold text-gray-800 mb-2">
            Noticias Recientes
        </h2>
        <p class="text-gray-600 mb-8">
            Mantente informado con las últimas novedades de nuestra universidad.
        </p>
        <div class="max-w-8xl mx-auto">
            <NoticiasSlider client:load />
        </div>
    <section id="carreras" class="my-20 mx-auto">
        <div class="text-center bg-gray-100 py-20 px-4">
            <h2 class="text-4xl font-bold text-gray-800 mb-2">
                Oferta Educativa
            </h2>
            <p class="text-gray-600">
                Explora las carreras que te llevarán al siguiente nivel.
            </p>
        </div>
        

        <div class="flex flex-col">
            {
                careers.map((career) => (
                    <CareerBanner
                        title={career.name}
                        imageUrl={career.img.src}
                        description={career.description}
                        client:visible
                    />
                ))
            }
        </div>
    </section>
</MainLayout>