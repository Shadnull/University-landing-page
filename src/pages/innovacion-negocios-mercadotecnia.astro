---
import MainLayout from "../layouts/MainLayout.astro";
import Footer from "../components/vue/Footer.vue";
import PageHeroTemplate from "../components/vue/PageHeroTemplate.vue";
import { careers } from "../DB/db.js";
import "../styles/global.css";

const career = careers.find(
  (c) => c.id === "innovacion-negocios-mercadotecnia",
);
if (!career) {
  throw new Error(
    "Career 'innovacion-negocios-mercadotecnia' not found in db.js",
  );
}
---

<MainLayout title={`${career.name} - Universidad Tecnológica de Nayarit`}>
  <section
    id="hero-innovacion-negocios-mercadotecnia"
    class="relative h-[80vh] md:h-[90vh]"
  >
    <div class="absolute inset-0 bg-black/50 z-10"></div>
    <PageHeroTemplate
      client:load
      eyebrow="Oferta educativa"
      title={career.name}
      subtitle={career.description}
      imageSrc="https://www.pexels.com/photo/person-holding-blue-ballpoint-pen-on-white-notebook-669610/"
    />
  </section>

  <section class="py-16 px-4 sm:px-6 lg:px-8 bg-white text-gray-900">
    <div class="max-w-5xl mx_auto space-y-6 text-sm md:text-base text-gray-700">
      <h2 class="text-2xl md:text-3xl font-bold mb-2">Perfil de la carrera</h2>
      <p>
        Duración: <span class="font-semibold">{career.duration}</span> · Modalidad:
        <span class="font-semibold">{career.modality}</span>
      </p>
      <p>
        Campo laboral: {career.field}
      </p>
      <p>
        Detallar aquí proyectos de innovación, marketing digital, emprendimiento
        y estrategias comerciales que se impulsen desde la carrera.
      </p>
    </div>
  </section>

  <Footer client:only="vue" />
</MainLayout>
